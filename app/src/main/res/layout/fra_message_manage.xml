<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="8.5dp"
        android:layout_marginTop="9.5dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8.5dp"
                android:textColor="#ffffff"
                android:textSize="48dp"
                android:text="메세지/\n쿠폰관리"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="460dp"
                android:orientation="vertical"
                android:layout_marginTop="23.5dp"
                android:paddingLeft="8.5dp">

                <LinearLayout
                    android:id="@+id/messageStatisticsLL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17.5dp"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/messageStatisticsTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="36dp"
                            android:textColor="#ffffff"
                            android:text="메세지 통계"/>


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/sendMessageLL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17.5dp"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/sendMessageTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="36dp"
                            android:textColor="#80ffffff"
                            android:text="메세지/쿠폰 보내기"/>



                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/autoCouponLL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17.5dp"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/autoCouponTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="36dp"
                            android:textColor="#80ffffff"
                            android:text="자동 쿠폰 관리"/>



                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"

                android:layout_height="match_parent"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/accumulateLL"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="10dp"
                        android:background="#997afb"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:letterSpacing="-0.03"
                            android:lineSpacingExtra="-2sp"
                            android:text="적립"
                            android:textColor="#ffffff"
                            android:textSize="12dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/useLL"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:background="#ff8e1b"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:letterSpacing="-0.03"
                            android:lineSpacingExtra="-2sp"
                            android:text="사용"
                            android:textColor="#ffffff"
                            android:textSize="12dp" />


                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/messageFL"
            android:layout_marginTop="9.5dp"
            android:layout_width="match_parent"
            android:layout_marginRight="29dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="6dp"
            android:orientation="vertical"
            android:background="#ffff"
            >

        </FrameLayout>

    </LinearLayout>



</LinearLayout>