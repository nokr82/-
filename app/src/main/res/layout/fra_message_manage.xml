<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="149dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="8.5dp"
        android:layout_marginTop="9.5dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8.5dp"
                android:textColor="#ffffff"
                android:textSize="24sp"
                android:letterSpacing="-1.2"
                android:text="메세지/\n쿠폰관리"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="23.5dp"
                android:paddingLeft="8.5dp">
                <TextView
                    android:id="@+id/selCustomTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="19.5dp"
                    android:textSize="9sp"
                    android:textColor="#ffffff"
                    android:letterSpacing="-0.23"
                    android:text="고객선택"/>
                <View
                    android:id="@+id/view1"
                    android:layout_width="35.5dp"
                    android:layout_height="0.5dp"
                    android:background="#ffffff"/>

                <TextView
                    android:id="@+id/setCouponTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="19.5dp"
                    android:letterSpacing="-0.23"
                    android:textColor="#80ffffff"
                    android:textSize="9sp"
                    android:text="쿠폰설정"/>
                <View
                    android:id="@+id/view2"
                    android:layout_width="34dp"
                    android:layout_height="0.5dp"/>

                <TextView
                    android:id="@+id/wrMsgTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="19.5dp"
                    android:letterSpacing="-0.23"
                    android:textColor="#80ffffff"
                    android:textSize="9sp"
                    android:text="메시지작성"/>
                <View
                    android:id="@+id/view3"
                    android:layout_width="42dp"
                    android:layout_height="0.5dp"/>

                <TextView
                    android:id="@+id/finalCheckTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="19.5dp"
                    android:letterSpacing="-0.23"
                    android:textColor="#80ffffff"
                    android:textSize="9sp"
                    android:text="최종확인"/>
                <View
                    android:id="@+id/view4"
                    android:layout_width="34dp"
                    android:layout_height="0.5dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="9.5dp"
        android:layout_width="match_parent"
        android:layout_marginRight="29dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="6dp"
        android:orientation="vertical"
        android:background="#ffff"
        >
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="9sp"
            android:textColor="#666666"
            android:letterSpacing="-0.03"
            android:lineSpacingExtra="3sp"
            android:text="고객필터"
            />



        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/background_strock_e7e7e7">

            <LinearLayout
                android:layout_marginTop="9.5dp"
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/background_strock_e7e7e7"
                android:layout_height="20dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/allRL"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="#0068df">


                    <TextView
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="9sp"
                        android:textColor="#ffff"
                        android:letterSpacing="-0.03"
                        android:lineSpacingExtra="3sp"
                        android:gravity="center_horizontal"
                        android:text="전체"
                        />
                    <View
                        android:layout_alignParentBottom="true"
                        android:background="#606060"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/acc_countRL"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center_horizontal"
                        android:letterSpacing="-0.03"
                        android:lineSpacingExtra="3sp"
                        android:text="적립횟수"
                        android:textColor="#c5c5c5"
                        android:textSize="9sp" />
                    <View
                        android:layout_alignParentBottom="true"
                        android:background="#606060"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/novisitRL"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center_horizontal"
                        android:letterSpacing="-0.03"
                        android:lineSpacingExtra="3sp"
                        android:text="미방문"
                        android:textColor="#c5c5c5"
                        android:textSize="9sp" />
                    <View
                        android:layout_alignParentBottom="true"
                        android:background="#606060"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/use_moneyRL"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center_horizontal"
                        android:letterSpacing="-0.03"
                        android:lineSpacingExtra="3sp"
                        android:text="구매금액"
                        android:textColor="#c5c5c5"
                        android:textSize="9sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_alignParentBottom="true"
                        android:background="#606060" />

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/pointRL"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="9sp"
                        android:textColor="#c5c5c5"
                        android:letterSpacing="-0.03"
                        android:lineSpacingExtra="3sp"
                        android:gravity="center_horizontal"
                        android:text="포인트"
                        />
                    <View
                        android:layout_alignParentBottom="true"
                        android:background="#606060"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"/>

                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="70dp"
                android:layout_height="18dp"
                android:textSize="9sp"
                android:textColor="#666666"
                android:letterSpacing="-0.03"
                android:lineSpacingExtra="3sp"
                android:text="방문기간"
                />
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5.5dp"
                android:layout_width="70dp"
                android:layout_height="18dp"
                android:layout_marginBottom="8.5dp"
                android:gravity="center_vertical"
                android:background="@drawable/background_strock_707070">
                <Spinner
                    android:id="@+id/visitdaySP"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:layout_height="match_parent"></Spinner>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_down_arrow"/>

            </LinearLayout>



        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="9sp"
                android:textColor="#666666"
                android:text="상세필터"
                android:layout_marginRight="4dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="7sp"
                android:textColor="#a1a1a1"
                android:letterSpacing="-0.03"
                android:lineSpacingExtra="5sp"
                android:text="상세 필터를 설정하지 않으면, 전체 고객이 선택됩니다 "
                />

        </LinearLayout>


        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:background="@drawable/background_strock_e7e7e7">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center_vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.5dp"
                    android:textSize="9sp"
                    android:textColor="#666666"
                    android:text="성별"/>
                <LinearLayout
                    android:id="@+id/genderLL"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="17.5dp"
                    android:background="@drawable/background_00d1ce"

                    android:gravity="center">
                    <TextView
                        android:id="@+id/genderTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="8sp"
                        android:textColor="#9a9a99"
                        android:letterSpacing="-0.03"
                        android:lineSpacingExtra="4sp"
                        android:gravity="center_horizontal"
                        android:text="성별모름"
                        />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/menLL"
                    android:layout_width="39dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/background_strock_c1c1c1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/menTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:letterSpacing="-0.03"
                        android:lineSpacingExtra="4sp"
                        android:text="남성"
                        android:textColor="#9a9a99"
                        android:textSize="8sp" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/girlLL"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/background_strock_c1c1c1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/girlTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:letterSpacing="-0.03"
                        android:lineSpacingExtra="4sp"
                        android:text="여성"
                        android:textColor="#9a9a99"
                        android:textSize="8sp" />


                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center_vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.5dp"
                    android:textSize="9sp"
                    android:textColor="#666666"
                    android:text="나이"/>

                <LinearLayout
                    android:id="@+id/tenLL"
                    android:layout_width="36dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="17.5dp"
                    android:background="@drawable/background_00d1ce"

                    android:gravity="center">

                    <TextView
                        android:id="@+id/tenTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:letterSpacing="-0.03"
                        android:lineSpacingExtra="4sp"
                        android:text="10대"
                        android:textColor="#9a9a99"
                        android:textSize="8sp" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/twoLL"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/background_strock_c1c1c1"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/twoTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="8sp"
                        android:textColor="#9a9a99"
                        android:letterSpacing="-0.03"
                        android:lineSpacingExtra="4sp"
                        android:gravity="center_horizontal"
                        android:text="20대"
                        />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/threeLL"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/background_strock_c1c1c1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/threeTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:letterSpacing="-0.03"
                        android:lineSpacingExtra="4sp"
                        android:text="30대"
                        android:textColor="#9a9a99"
                        android:textSize="8sp" />


                </LinearLayout>
                <LinearLayout
                    android:id="@+id/fourLL"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/background_strock_c1c1c1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/fourTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:letterSpacing="-0.03"
                        android:lineSpacingExtra="4sp"
                        android:text="40대"
                        android:textColor="#9a9a99"
                        android:textSize="8sp" />


                </LinearLayout>
                <LinearLayout
                    android:id="@+id/fiveLL"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/background_strock_c1c1c1"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/fiveTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="8sp"
                        android:textColor="#9a9a99"
                        android:letterSpacing="-0.03"
                        android:lineSpacingExtra="4sp"
                        android:gravity="center_horizontal"
                        android:text="50대"
                        />


                </LinearLayout>
                <LinearLayout
                    android:id="@+id/sixLL"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/background_strock_c1c1c1"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/sixTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="8sp"
                        android:textColor="#9a9a99"
                        android:letterSpacing="-0.03"
                        android:lineSpacingExtra="4sp"
                        android:gravity="center_horizontal"
                        android:text="60대"
                        />


                </LinearLayout>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center_vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.5dp"
                    android:textSize="9sp"
                    android:textColor="#666666"
                    android:text="유형"/>
                <LinearLayout
                    android:id="@+id/citizenLL"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="17.5dp"
                    android:background="@drawable/background_00d1ce"

                    android:gravity="center">

                    <TextView
                        android:id="@+id/citizenTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:letterSpacing="-0.03"
                        android:lineSpacingExtra="4sp"
                        android:text="동네주민"
                        android:textColor="#9a9a99"
                        android:textSize="8sp" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/studentLL"
                    android:layout_width="39dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/background_strock_c1c1c1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/studentTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:letterSpacing="-0.03"
                        android:lineSpacingExtra="4sp"
                        android:text="대학생"
                        android:textColor="#9a9a99"
                        android:textSize="8sp" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/workerLL"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/background_strock_c1c1c1"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/workerTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="8sp"
                        android:textColor="#9a9a99"
                        android:letterSpacing="-0.03"
                        android:lineSpacingExtra="4sp"
                        android:gravity="center_horizontal"
                        android:text="직장인"
                        />


                </LinearLayout>
                <LinearLayout
                    android:id="@+id/cautionLL"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/background_strock_c1c1c1"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/cautionTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="8sp"
                        android:textColor="#9a9a99"
                        android:letterSpacing="-0.03"
                        android:lineSpacingExtra="4sp"
                        android:gravity="center_horizontal"
                        android:text="각별주의"
                        />


                </LinearLayout>
            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:padding="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/customerCntTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:textSize="8.5sp"
                android:textColor="#0871bf"
                android:text="11,000명"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:textColor="#666666"
                android:textSize="8.5sp"
                android:text="고객선택"/>
            <TextView
                android:id="@+id/nextTV"
                android:layout_width="65.5dp"
                android:layout_height="20dp"
                android:gravity="center"
                android:background="#0871bf"
                android:textColor="#ffffff"
                android:textSize="9sp"
                android:text="다음"/>
        </LinearLayout>



    </LinearLayout>



</LinearLayout>