<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/item_couponClicked"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="쿠폰 사용"
        android:textColor="#333333"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/LL"
        android:layout_width="270dp"
        android:layout_height="90dp"
        android:padding="5dp">

        <LinearLayout
            android:id="@+id/couponBackLL"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="2dp">

            <TextView
                android:id="@+id/item_couponNameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="3.5dp"
                android:lineSpacingExtra="3sp"
                android:text="쿠폰이름"
                android:textColor="#333333"
                android:textSize="9sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="3dp">

                <TextView
                    android:id="@+id/item_s_validityTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:letterSpacing="-0.2"
                    android:text="2018-11-29"
                    android:textColor="#595959"
                    android:textSize="14dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:letterSpacing="-0.02"
                    android:text=" ~ "
                    android:textColor="#595959"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/item_e_validityTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:letterSpacing="-0.02"
                    android:text="2018-12-31"
                    android:textColor="#595959"
                    android:textSize="14dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/item_messageTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="5dp"
                android:text="메세지"
                android:textColor="#595959"
                android:textSize="12dp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/item_contentET"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="5dp"
                android:background="@null"
                android:maxLines="1"
                android:textColor="#595959"
                android:textSize="12dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>