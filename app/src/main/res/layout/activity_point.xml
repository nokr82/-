<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.5dp"
            android:layout_marginTop="18.5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titleTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textColor="#ffffff"
                android:letterSpacing="-0.03"
                android:text="박소윤 님"
                />
            <View
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="#ffff"/>

        </LinearLayout>



        <LinearLayout
            android:layout_marginTop="14dp"
            android:visibility="gone"
            android:id="@+id/joinLL"
            android:background="#90424242"
            android:layout_width="127dp"
            android:layout_height="182.5dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="16.5dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/nameET"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:letterSpacing="-0.03"
                        android:lineSpacingExtra="1sp"
                        android:hint="이름"
                        android:background="@null"
                        android:textColorHint="#ffffff"
                        android:textSize="9sp" />

                </LinearLayout>
                <View
                    android:layout_marginRight="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="#ffffff"/>

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="16.5dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/new_phoneTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:letterSpacing="-0.03"
                        android:lineSpacingExtra="1sp"
                        android:background="@null"
                        android:textColor="#ffffff"
                        android:textSize="9sp" />

                </LinearLayout>
                <View
                    android:layout_marginRight="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="#ffffff"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="16.5dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">
                    <EditText
                        android:id="@+id/genderET"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="9sp"
                        android:hint="성별"
                        android:background="@null"
                        android:textColorHint="#ffffff"
                        android:letterSpacing="-0.03"
                        android:lineSpacingExtra="1sp"
                     />

                </LinearLayout>
                <View
                    android:layout_marginRight="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="#ffffff"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="16.5dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/ageET"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:letterSpacing="-0.03"
                        android:hint="나이"
                        android:lineSpacingExtra="1sp"
                        android:background="@null"
                        android:textColorHint="#ffffff"
                        android:textSize="9sp" />

                </LinearLayout>
                <View
                    android:layout_marginRight="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="#ffffff"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="16.5dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">
                    <EditText
                        android:id="@+id/birthET"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="9sp"
                        android:hint="새일"
                        android:background="@null"
                        android:textColorHint="#ffffff"
                        android:letterSpacing="-0.03"
                        android:lineSpacingExtra="1sp"
                    />

                </LinearLayout>
                <View
                    android:layout_marginRight="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="#ffffff"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="16.5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:letterSpacing="-0.03"
                        android:lineSpacingExtra="1sp"
                        android:text="누적사용:"
                        android:textColor="#ffffff"
                        android:background="@null"
                        android:textSize="9sp" />
                    <EditText
                        android:id="@+id/stack_pointET"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="9sp"
                        android:hint="포인트"
                        android:background="@null"
                        android:textColorHint="#ffffff"
                        android:letterSpacing="-0.03"
                        android:lineSpacingExtra="1sp"
                        />

                </LinearLayout>
                <View
                    android:layout_marginRight="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="#ffffff"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="16.5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="9sp"
                        android:textColor="#ffffff"
                        android:letterSpacing="-0.03"
                        android:lineSpacingExtra="1sp"
                        android:text="보유쿠폰:" />
                    <EditText
                        android:id="@+id/couponET"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="9sp"
                        android:hint="쿠폰"
                        android:background="@null"
                        android:textColorHint="#ffffff"
                        android:letterSpacing="-0.03"
                        android:lineSpacingExtra="1sp"
                      />

                </LinearLayout>
                <View
                    android:layout_marginRight="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="#ffffff"/>
                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/memoET"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="8sp"
                        android:hint="메모"
                        android:background="@null"
                        android:textColorHint="#ffffff"
                        android:letterSpacing="-0.01"

                        />


                </LinearLayout>
                <View
                    android:layout_marginRight="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="#ffffff"/>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="14dp"
            android:visibility="invisible"
            android:id="@+id/message_op_LL"
            android:background="#90424242"
            android:layout_width="127dp"
            android:layout_height="182.5dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/phoneTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:letterSpacing="-0.03"
                        android:lineSpacingExtra="1sp"
                        android:text="010-***1-9767"
                        android:textColor="#ffffff"
                        android:textSize="9sp" />

                </LinearLayout>
                <View
                    android:layout_marginRight="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="#ffffff"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="16.5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical">

                            <ImageView
                                android:id="@+id/maleIV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:src="@drawable/radio_on" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="1dp"
                                android:textSize="9sp"
                                android:textColor="#ffffff"
                                android:letterSpacing="-0.01"
                                android:gravity="center_horizontal"
                                android:text="남" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical">

                            <ImageView
                                android:id="@+id/femaleIV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:src="@drawable/radio_on" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="1dp"
                                android:textSize="9sp"
                                android:textColor="#ffffff"
                                android:letterSpacing="-0.01"
                                android:gravity="center_horizontal"
                                android:text="여" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
                <View
                    android:layout_marginRight="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="#ffffff"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="16.5dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/ageTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="9sp"
                        android:textColor="#ffffff"
                        android:letterSpacing="-0.03"
                        android:lineSpacingExtra="1sp"
                        android:text="22세" />

                </LinearLayout>
                <View
                    android:layout_marginRight="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="#ffffff"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="16.5dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/birthTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="9sp"
                        android:textColor="#ffffff"
                        android:letterSpacing="-0.03"
                        android:lineSpacingExtra="1sp"
                        android:text="1996-04-02" />

                </LinearLayout>
                <View
                    android:layout_marginRight="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="#ffffff"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="16.5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="9sp"
                        android:textColor="#ffffff"
                        android:letterSpacing="-0.03"
                        android:lineSpacingExtra="1sp"
                        android:text="사용가능:" />
                    <TextView
                        android:id="@+id/stack_pointTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="9sp"
                        android:textColor="#ffffff"
                        android:letterSpacing="-0.03"
                        android:lineSpacingExtra="1sp"
                        android:text="0" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="9sp"
                        android:textColor="#ffffff"
                        android:letterSpacing="-0.03"
                        android:lineSpacingExtra="1sp"
                        android:text="P" />

                </LinearLayout>
                <View
                    android:layout_marginRight="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="#ffffff"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="16.5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="9sp"
                        android:textColor="#ffffff"
                        android:letterSpacing="-0.03"
                        android:lineSpacingExtra="1sp"
                        android:text="보유쿠폰:" />
                    <TextView
                        android:id="@+id/couponTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="9sp"
                        android:textColor="#ffffff"
                        android:letterSpacing="-0.03"
                        android:lineSpacingExtra="1sp"
                        android:text="4장" />
                </LinearLayout>

                <View
                    android:layout_marginRight="6dp"
                    android:layout_marginBottom="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="#ffffff"/>
                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/memoTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="8sp"
                        android:textColor="#ffffff"
                        android:letterSpacing="-0.01"
                        android:text="소형견, 말티스, 강아지 이름
우측 최상단 톱니바퀴
모양을 누르면
설정으로 이동합니다."
                        />


                </LinearLayout>
                <View
                    android:layout_marginRight="6dp"
                    android:layout_marginTop="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="#ffffff"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <!--확인버튼, 스피너, 라디오그룹-->
            <LinearLayout
                android:layout_marginLeft="7dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <TextView
                    android:id="@+id/okTV"
                    android:visibility="invisible"
                    android:layout_width="115dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="12.5dp"
                    android:gravity="center"
                    android:background="#2b2b2b"
                    android:text="확인"
                    android:textSize="12sp"
                    android:textColor="#ffffff"/>

                <LinearLayout
                    android:id="@+id/use_payLL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/spinnerIV"
                    android:layout_width="114.5dp"
                    android:layout_height="18dp"

                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:background="#ffffff">

                    <Spinner
                        android:paddingLeft="10dp"
                        android:id="@+id/cate_SP"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:layout_height="match_parent"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/icon_down_arrow"/>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="115dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="10dp">
                    <LinearLayout
                        android:id="@+id/cardPayLL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/cardPayIV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/radio_off"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5.5dp"
                            android:textSize="8sp"
                            android:textColor="#ffffff"
                            android:text="카드결제"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/cashPayLL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="9.5dp">
                        <ImageView
                            android:id="@+id/cashPayIV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/radio_off"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5.5dp"
                            android:textSize="8sp"
                            android:textColor="#ffffff"
                            android:text="현금결제"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/depositlessLL"
                    android:layout_width="match_parent"

                    android:layout_marginTop="5.5dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/depositlessIV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/radio_off"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5.5dp"
                        android:textSize="8sp"
                        android:textColor="#ffffff"
                        android:text="무통장입금"/>
                </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/checkLL"
                android:layout_width="115dp"
                android:layout_height="25dp"
                android:background="#2b2b2b"
                android:gravity="center"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:letterSpacing="-0.03"
                    android:text="신규가입"
                    android:textColor="#ffffff"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="9.5dp"
        android:orientation="vertical">



        <RelativeLayout
            android:layout_marginLeft="23dp"
            android:layout_width="225dp"
            android:background="#90000000"
            android:layout_height="30.5dp"
            android:orientation="horizontal">



            <TextView
                android:id="@+id/pointTV"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#90ffffff"
                android:lineSpacingExtra="25sp"
                android:gravity="center_horizontal"
                android:text="포인트 수량 입력"
                />


            <ImageView
                android:layout_alignParentRight="true"
               android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/btn_close"/>


        </RelativeLayout>


        <LinearLayout
            android:layout_marginBottom="5dp"
            android:layout_marginTop="9.5dp"
            android:layout_marginLeft="23dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="#ffffff"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:gravity="right"
                android:layout_marginRight="11dp"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/moneyTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="27sp"
                        android:textColor="#0066b0"
                        android:letterSpacing="-0.03"
                        android:lineSpacingExtra="8sp"
                        android:gravity="end"
                        />
                    <TextView
                        android:id="@+id/m_opTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="27sp"
                        android:textColor="#0066b0"
                        android:letterSpacing="-0.03"
                        android:lineSpacingExtra="8sp"
                        android:gravity="end"
                        android:text="￦"
                        />


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <LinearLayout
                        android:onClick="onClick"
                        android:id="@+id/oneLL"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:letterSpacing="-0.05"
                            android:lineSpacingExtra="-15sp"
                            android:text="1"
                            android:textColor="#666666"
                            android:textSize="24sp" />

                    </LinearLayout>
                    <LinearLayout
                        android:onClick="onClick"
                        android:id="@+id/twoLL"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="24sp"
                            android:textColor="#666666"
                            android:letterSpacing="-0.05"
                            android:lineSpacingExtra="-15sp"
                            android:text="2"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:onClick="onClick"
                        android:id="@+id/threeLL"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="24sp"
                            android:textColor="#666666"
                            android:letterSpacing="-0.05"
                            android:lineSpacingExtra="-15sp"
                            android:text="3"
                            />

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:onClick="onClick"
                        android:id="@+id/fourLL"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:letterSpacing="-0.05"
                            android:lineSpacingExtra="-15sp"
                            android:text="4"
                            android:textColor="#666666"
                            android:textSize="24sp" />

                    </LinearLayout>
                    <LinearLayout
                        android:onClick="onClick"
                        android:id="@+id/fiveLL"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
