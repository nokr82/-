<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <com.devstories.anipointcompany.android.base.RationalLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:ratio="150:360"
        app:adjustHeight="false">

        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <me.grantland.widget.AutofitTextView
                    android:singleLine="true"
                    android:maxLines="2"
                    android:id="@+id/titleTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="23.5dp"
                    android:layout_marginTop="15.5dp"
                    android:text="고객 분석"
                    android:textColor="#ffff"
                    android:textSize="48dp" />


                <ScrollView
                    android:layout_width="match_parent"
                    android:fillViewport="true"
                    android:scrollbars="none"
                    android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <LinearLayout
                        android:id="@+id/allLL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="17.5dp"
                        android:orientation="vertical">


                        <me.grantland.widget.AutofitTextView
                            android:singleLine="true"
                            android:maxLines="1"
                            android:id="@+id/allTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:letterSpacing="-0.03"
                            android:lineSpacingExtra="1sp"
                            android:text="통합"
                            android:textColor="#ffffff"
                            android:textSize="36dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/daysLL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="17.5dp"
                        android:orientation="vertical">


                        <me.grantland.widget.AutofitTextView
                            android:singleLine="true"
                            android:maxLines="1"
                            android:id="@+id/daysTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:letterSpacing="-0.03"
                            android:lineSpacingExtra="1sp"
                            android:text="요일별"
                            android:textColor="#ffffff"
                            android:textSize="36dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/timeLL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="17.5dp"
                        android:orientation="vertical">


                        <me.grantland.widget.AutofitTextView
                            android:singleLine="true"
                            android:maxLines="1"
                            android:id="@+id/timeTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:letterSpacing="-0.03"
                            android:lineSpacingExtra="1sp"
                            android:text="시간대별"
                            android:textColor="#80ffffff"
                            android:textSize="36dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ageLL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="17.5dp"
                        android:orientation="vertical">


                        <me.grantland.widget.AutofitTextView
                            android:singleLine="true"
                            android:maxLines="1"
                            android:id="@+id/ageTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:letterSpacing="-0.03"
                            android:lineSpacingExtra="1sp"
                            android:text="나이별"
                            android:textColor="#80ffffff"
                            android:textSize="36dp" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginBottom="31dp"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">




                        <LinearLayout
                            android:id="@+id/accumulateLL"
                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:layout_marginTop="20dp"
                            android:layout_weight="0.5"
                            android:background="#997afb"
                            android:gravity="center">

                            <me.grantland.widget.AutofitTextView
                                android:singleLine="true"
                                android:maxLines="1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:letterSpacing="-0.03"
                                android:lineSpacingExtra="-2sp"
                                android:text="적립"
                                android:textColor="#ffffff"
                                android:textSize="24dp" />


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/useLL"
                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="20dp"
                            android:layout_weight="0.5"
                            android:background="#ff8e1b"
                            android:gravity="center">

                            <me.grantland.widget.AutofitTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:letterSpacing="-0.03"
                                android:lineSpacingExtra="-2sp"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text="사용"
                                android:textColor="#ffffff"
                                android:textSize="24dp" />


                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
                </ScrollView>



            </LinearLayout>



        </LinearLayout>

    </com.devstories.anipointcompany.android.base.RationalLinearLayout>

    <FrameLayout
        android:id="@+id/visitFL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="9.5dp"
        android:layout_marginRight="29dp"
        android:background="#ffff"
        android:orientation="vertical">


    </FrameLayout>

</LinearLayout>