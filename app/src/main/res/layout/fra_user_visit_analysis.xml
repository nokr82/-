<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <com.devstories.anipointcompany.android.base.RationalRelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:ratio="300:360">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8.5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/titleTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="23.5dp"
                    android:layout_marginTop="15.5dp"
                    android:text="고객 방문\n분석"
                    android:textColor="#ffff"
                    android:textSize="48dp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <LinearLayout
                        android:id="@+id/allLL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="17.5dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/allTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:letterSpacing="-0.03"
                            android:lineSpacingExtra="1sp"
                            android:text="통합"
                            android:textColor="#ffffff"
                            android:textSize="36dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/daysLL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="17.5dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/daysTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:letterSpacing="-0.03"
                            android:lineSpacingExtra="1sp"
                            android:text="요일별"
                            android:textColor="#ffffff"
                            android:textSize="36dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/timeLL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="17.5dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/timeTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:letterSpacing="-0.03"
                            android:lineSpacingExtra="1sp"
                            android:text="시간대별"
                            android:textColor="#80ffffff"
                            android:textSize="36dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ageLL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="17.5dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/ageTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:letterSpacing="-0.03"
                            android:lineSpacingExtra="1sp"
                            android:text="나이별"
                            android:textColor="#80ffffff"
                            android:textSize="36dp" />


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/accumulateLL"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="10dp"
                    android:background="#4ed0cd"
                    android:gravity="center"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:letterSpacing="-0.03"
                        android:lineSpacingExtra="-2sp"
                        android:text="적립"
                        android:textColor="#ffffff"
                        android:textSize="12dp" />


                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginBottom="40dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/va_accumulateLL"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="10dp"
                    android:background="#997afb"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:letterSpacing="-0.03"
                        android:lineSpacingExtra="-2sp"
                        android:text="적립"
                        android:textColor="#ffffff"
                        android:textSize="24dp" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/useLL"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:background="#ff8e1b"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:letterSpacing="-0.03"
                        android:lineSpacingExtra="-2sp"
                        android:text="사용"
                        android:textColor="#ffffff"
                        android:textSize="24dp" />


                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </com.devstories.anipointcompany.android.base.RationalRelativeLayout>

    <FrameLayout
        android:id="@+id/visitFL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="9.5dp"
        android:layout_marginRight="29dp"
        android:background="#ffff"
        android:orientation="vertical">


    </FrameLayout>

</LinearLayout>