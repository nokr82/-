<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <LinearLayout
            android:id="@+id/spaceLL"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <com.devstories.anipointcompany.android.base.RationalLinearLayout
                android:id="@+id/msLL"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:adjustHeight="false"
                app:ratio="150:360">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <me.grantland.widget.AutofitTextView
                        android:id="@+id/titleTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="23.5dp"
                        android:layout_marginTop="15.5dp"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="설정"
                        android:textColor="#ffff"
                        android:textSize="48dp" />


                    <ScrollView
                        android:layout_width="match_parent"
                        android:fillViewport="true"
                        android:scrollbars="none"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                        <LinearLayout
                            android:id="@+id/myInfoLL"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:visibility="visible">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:layout_marginTop="35dp"
                                android:gravity=""
                                android:orientation="vertical">



                                <me.grantland.widget.AutofitTextView
                                    android:singleLine="true"
                                    android:maxLines="1"
                                    android:id="@+id/myInfoTV"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:lineSpacingExtra="1sp"
                                    android:text="내정보"
                                    android:textColor="#ffffff"
                                    android:textSize="36dp" />




                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/operPolicyLL"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="">


                                <me.grantland.widget.AutofitTextView
                                    android:singleLine="true"
                                    android:maxLines="1"
                                    android:id="@+id/operPolicyTV"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:lineSpacingExtra="1sp"
                                    android:text="운영정책"
                                    android:textColor="#80ffffff"
                                    android:textSize="36dp" />


                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/contractLL"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:visibility="visible"

                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <me.grantland.widget.AutofitTextView
                                        android:singleLine="true"
                                        android:id="@+id/contractTV"
                                        android:maxLines="1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:lineSpacingExtra="1sp"
                                        android:text="계약서"
                                        android:textColor="#80ffffff"
                                        android:textSize="36dp" />



                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/monthLL"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:visibility="invisible"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <me.grantland.widget.AutofitTextView
                                        android:id="@+id/monthTV"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:lineSpacingExtra="1sp"
                                        android:maxLines="1"
                                        android:singleLine="true"
                                        android:textColor="#80ffffff"
                                        android:textSize="36dp" />


                                </LinearLayout>

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">


                                <LinearLayout
                                    android:id="@+id/accumulateLL"
                                    android:layout_width="0dp"
                                    android:layout_height="80dp"
                                    android:layout_marginTop="20dp"
                                    android:layout_weight="0.5"
                                    android:background="#997afb"
                                    android:gravity="center">

                                    <me.grantland.widget.AutofitTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_horizontal"
                                        android:lineSpacingExtra="-2sp"
                                        android:maxLines="1"
                                        android:singleLine="true"
                                        android:text="적립"
                                        android:textColor="#ffffff"
                                        android:textSize="24dp" />


                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/useLL"
                                    android:layout_width="0dp"
                                    android:layout_height="80dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginTop="20dp"
                                    android:layout_weight="0.5"
                                    android:background="#997afb"
                                    android:gravity="center">

                                    <me.grantland.widget.AutofitTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_horizontal"
                                        android:lineSpacingExtra="-2sp"
                                        android:maxLines="1"
                                        android:singleLine="true"
                                        android:text="사용"
                                        android:textColor="#ffffff"
                                        android:textSize="24dp" />


                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/noLL"
                                    android:layout_width="0dp"
                                    android:layout_height="80dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginTop="20dp"
                                    android:layout_weight="0.5"
                                    android:background="@color/colorAccent"
                                    android:gravity="center">

                                    <me.grantland.widget.AutofitTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_horizontal"
                                        android:lineSpacingExtra="-2sp"
                                        android:maxLines="1"
                                        android:singleLine="true"
                                        android:text="무적립"
                                        android:textColor="#ffffff"
                                        android:textSize="24dp" />


                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>
                    </ScrollView>




                </LinearLayout>
            </com.devstories.anipointcompany.android.base.RationalLinearLayout>

            <ScrollView
                android:id="@+id/mainSV"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginTop="9.5dp"
                android:layout_height="match_parent"
                android:fillViewport="true">
            <FrameLayout
                android:id="@+id/settingFL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="#ffff"
                android:orientation="vertical">

            </FrameLayout>
            </ScrollView>
        </LinearLayout>


</LinearLayout>