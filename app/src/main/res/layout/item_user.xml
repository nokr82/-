<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.devstories.anipointcompany.android.base.RationalLinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:ratio="175:280"
        app:adjustHeight="false">


    <LinearLayout
        android:layout_marginLeft="10dp"
        android:background="#ffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_clock"/>
            <TextView
                android:id="@+id/dateTV"
                android:layout_marginLeft="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textColor="#8d8d8d"
                android:letterSpacing="-0.05"
                android:lineSpacingExtra="2sp"
                android:text="2018.10.15 방문"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:layout_marginTop="17dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/nameTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="32dp"
                    android:textColor="#005492"
                    android:letterSpacing="-0.03"
                    android:lineSpacingExtra="-6sp"
                    android:gravity="center_horizontal"
                    android:text="박소윤 님"
                    />

                <ImageView
                    android:visibility="gone"
                    android:layout_marginLeft="8.5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/arrow"/>
            </LinearLayout>

            <TextView
                android:id="@+id/phoneTV"
                android:visibility="invisible"
                android:layout_marginTop="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textColor="#9a9a9a"
                android:letterSpacing="-0.01"
                android:lineSpacingExtra="2sp"
                android:gravity="center_horizontal"
                android:text="010-***1-9767"
                android:layout_marginBottom="5.5dp"
                />
            <LinearLayout
                android:id="@+id/modiLL"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginBottom="22dp"
                android:gravity="center"
                android:background="#e5e5e5">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:textColor="#aeaeae"
                    android:letterSpacing="-0.01"
                    android:lineSpacingExtra="2sp"
                    android:gravity="center_horizontal"
                    android:text="수정"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:textColor="#9a9a9a"
                        android:letterSpacing="-0.01"
                        android:lineSpacingExtra="2sp"
                        android:text="현재 보유"
                        />
                    <TextView
                        android:id="@+id/pointTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:textColor="#0080bc"
                        android:letterSpacing="-0.01"
                        android:lineSpacingExtra="0sp"
                        android:text="6,840 P"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:textColor="#9a9a9a"
                        android:letterSpacing="-0.01"
                        android:lineSpacingExtra="2sp"
                        android:text="누적 적립"
                        />

                    <TextView
                        android:id="@+id/acc_pointTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:letterSpacing="-0.01"
                        android:lineSpacingExtra="0sp"
                        android:text="40 P"
                        android:textColor="#0080bc"
                        android:textSize="20dp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:textColor="#9a9a9a"
                        android:letterSpacing="-0.01"
                        android:lineSpacingExtra="2sp"
                        android:text="방문 횟수"
                        />
                    <TextView
                        android:id="@+id/visitTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:textColor="#626262"
                        android:letterSpacing="-0.01"
                        android:lineSpacingExtra="0sp"
                        android:text="4회"
                        />

                </LinearLayout>


            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="#e7e6e6"/>

            <LinearLayout
                android:layout_marginTop="21dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#489cca"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp">

                    <LinearLayout
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:background="#f7f7f7">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12dp"
                            android:textColor="#666666"
                            android:letterSpacing="-0.01"
                            android:gravity="center_horizontal"
                            android:text="이름"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/name2TV"
                            android:layout_marginLeft="5.5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12dp"
                            android:textColor="#303030"
                            android:letterSpacing="-0.01"
                            android:text="박소윤"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:background="#f7f7f7">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12dp"
                            android:textColor="#666666"
                            android:letterSpacing="-0.01"
                            android:gravity="center_horizontal"
                            android:text="성별"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/genderTV"
                            android:layout_marginLeft="5.5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12dp"
                            android:textColor="#303030"
                            android:letterSpacing="-0.01"
                            android:text="여"
                            />

                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp">

                    <LinearLayout
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:background="#f7f7f7">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12dp"
                            android:textColor="#666666"
                            android:letterSpacing="-0.01"
                            android:gravity="center_horizontal"
                            android:text="나이"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/ageTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5.5dp"
                            android:letterSpacing="-0.01"
                            android:text="22세"
                            android:textColor="#303030"
                            android:textSize="12dp" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:background="#f7f7f7">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12dp"
                            android:textColor="#666666"
                            android:letterSpacing="-0.01"
                            android:gravity="center_horizontal"
                            android:text="생일"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/birthTV"
                            android:layout_marginLeft="5.5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12dp"
                            android:textColor="#303030"
                            android:letterSpacing="-0.01"
                            android:text="1996-04-02"
                            />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp">

                    <LinearLayout
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:background="#f7f7f7">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12dp"
                            android:textColor="#666666"
                            android:letterSpacing="-0.01"
                            android:gravity="center_horizontal"
                            android:text="누적사용"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/use_pointTV"
                            android:layout_marginLeft="5.5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12dp"
                            android:textColor="#303030"
                            android:letterSpacing="-0.01"
                            android:text="6,840 P"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:background="#f7f7f7">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12dp"
                            android:textColor="#666666"
                            android:letterSpacing="-0.01"
                            android:gravity="center_horizontal"
                            android:text="보유쿠폰"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/couponTV"
                            android:layout_marginLeft="5.5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12dp"
                            android:textColor="#303030"
                            android:letterSpacing="-0.01"
                            android:text="4장"
                            />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp">

                    <LinearLayout
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:background="#f7f7f7">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12dp"
                            android:textColor="#666666"
                            android:letterSpacing="-0.01"
                            android:gravity="center_horizontal"
                            android:text="메모"
                            />

                    </LinearLayout>
<ScrollView
    android:layout_width="0dp"
    android:layout_weight="1"
    android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/memoTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12dp"
                            android:textColor="#303030"
                            android:letterSpacing="-0.01"
                            android:text="소형견, 말티스, 강아지 이름
우측 최상단 톱니바퀴 모양을 누르면
설정으로 이동합니다."
                            />


</ScrollView>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp">

                    <LinearLayout
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:background="#f7f7f7">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:letterSpacing="-0.01"
                            android:text="방문이력"
                            android:textColor="#666666"
                            android:textSize="12dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/stack_pointTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12dp"
                            android:textColor="#303030"
                            android:letterSpacing="-0.01"
                            android:text="누적 : P"/>

                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fillViewport="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical">

                                <TextView
                                    android:id="@+id/visit_recordTV"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12dp"
                                    android:textColor="#303030"
                                    android:letterSpacing="-0.01"
                                    android:text="방문이력방문이력방문이력방문이력방문방문이력방문이력방문이력"/>

                            </LinearLayout>

                        </ScrollView>

                    </LinearLayout>


                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#489cca"/>
            </LinearLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginTop="20dp"
                android:id="@+id/msgLL"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:background="#00d1ce">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textColor="#ffffff"
                    android:letterSpacing="-0.01"
                    android:lineSpacingExtra="0sp"
                    android:text="메세지 보내기"
                    />


            </LinearLayout>

</RelativeLayout>

        </LinearLayout>



    </LinearLayout>


</com.devstories.anipointcompany.android.base.RationalLinearLayout>




</LinearLayout>