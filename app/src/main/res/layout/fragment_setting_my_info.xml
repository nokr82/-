<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffff"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:letterSpacing="-0.03"
                android:lineSpacingExtra="3sp"
                android:text="내 정보(매장정보)"
                android:textColor="#666666"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_strock_e7e7e7"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_weight="0.5"
                        android:background="#efefef"
                        android:gravity="center"
                        android:letterSpacing="-0.03"
                        android:lineSpacingExtra="4sp"
                        android:text="상호명"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="40dp"
                        android:background="#e7e7e7" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.7"
                        android:orientation="vertical"
                        android:paddingLeft="19dp">

                        <EditText
                            android:id="@+id/compNameET"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:gravity="center_vertical"
                            android:textSize="16sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#e7e7e7" />
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="660dp"
                    android:layout_height="1dp"
                    android:background="#e7e7e7" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_weight="0.5"
                        android:background="#efefef"
                        android:gravity="center"
                        android:letterSpacing="-0.03"
                        android:lineSpacingExtra="4sp"
                        android:text="연락처"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="40dp"
                        android:background="#e7e7e7" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.7"
                        android:orientation="horizontal"
                        android:paddingLeft="19dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <EditText
                                android:id="@+id/phoneNum1ET"
                                android:layout_width="70dp"
                                android:layout_height="32dp"
                                android:background="@null"
                                android:gravity="center_vertical"
                                android:maxLength="3"
                                android:textSize="16sp" />

                            <View
                                android:layout_width="70dp"
                                android:layout_height="1dp"
                                android:background="#e7e7e7" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:gravity="center"
                            android:text="-"
                            android:textSize="16sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <EditText
                                android:id="@+id/phoneNum2ET"
                                android:layout_width="70dp"
                                android:layout_height="32dp"
                                android:background="@null"
                                android:gravity="center_vertical"
                                android:maxLength="4"
                                android:textSize="16sp" />

                            <View
                                android:layout_width="70dp"
                                android:layout_height="1dp"
                                android:background="#e7e7e7" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:gravity="center"
                            android:text="-"
                            android:textSize="16sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <EditText
                                android:id="@+id/phoneNum3ET"
                                android:layout_width="70dp"
                                android:layout_height="32dp"
                                android:background="@null"
                                android:gravity="center_vertical"
                                android:maxLength="4"
                                android:textSize="16sp" />

                            <View
                                android:layout_width="70dp"
                                android:layout_height="1dp"
                                android:background="#e7e7e7" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="660dp"
                    android:layout_height="1dp"
                    android:background="#e7e7e7" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <TextView

                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_weight="0.5"
                        android:background="#efefef"
                        android:gravity="center"
                        android:letterSpacing="-0.03"
                        android:lineSpacingExtra="4sp"
                        android:text="아이디"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="40dp"
                        android:background="#e7e7e7" />

                    <LinearLayout

                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.7"
                        android:orientation="vertical"
                        android:paddingLeft="19dp">

                        <TextView
                            android:id="@+id/compIdET"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:gravity="center_vertical"
                            android:textSize="16sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#e7e7e7" />
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="660dp"
                    android:layout_height="1dp"
                    android:background="#e7e7e7" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <TextView

                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_weight="0.5"
                        android:background="#efefef"
                        android:gravity="center"
                        android:letterSpacing="-0.03"
                        android:lineSpacingExtra="4sp"
                        android:text="계약 기간"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="40dp"
                        android:background="#e7e7e7" />

                    <LinearLayout

                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.7"
                        android:orientation="vertical"
                        android:paddingLeft="19dp">

                        <TextView
                            android:id="@+id/termTV"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:textSize="16sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#e7e7e7" />
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="660dp"
                    android:layout_height="1dp"
                    android:background="#e7e7e7" />


                <TextView
                    android:id="@+id/infocheckTV"
                    android:layout_width="150dp"
                    android:layout_height="51dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="19dp"
                    android:layout_marginTop="30dp"
                    android:background="#0871bf"
                    android:gravity="center"
                    android:text="수정"
                    android:textColor="#ffffff"
                    android:textSize="20sp" />


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:letterSpacing="-0.03"
                android:lineSpacingExtra="3sp"
                android:text="이미지 등록"
                android:textColor="#666666"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="131dp"
                    android:background="@drawable/background_strock_e7e7e7"
                    android:paddingLeft="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="visible">


                        <RelativeLayout
                            android:id="@+id/addImage1RL"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_marginRight="20dp">

                            <View
                                android:layout_width="90dp"
                                android:layout_height="1dp"
                                android:background="#e7e7e7" />

                            <View
                                android:layout_width="90dp"
                                android:layout_height="1dp"
                                android:layout_alignParentBottom="true"
                                android:background="#e7e7e7" />

                            <View
                                android:layout_width="1dp"
                                android:layout_height="90dp"
                                android:layout_alignParentRight="true"
                                android:background="#e7e7e7" />

                            <View
                                android:layout_width="1dp"
                                android:layout_height="90dp"
                                android:layout_alignParentLeft="true"
                                android:background="#e7e7e7" />

                            <View
                                android:layout_width="60dp"
                                android:layout_height="2dp"
                                android:layout_centerInParent="true"
                                android:background="#e7e7e7" />

                            <View
                                android:layout_width="2dp"
                                android:layout_height="60dp"
                                android:layout_centerInParent="true"
                                android:background="#e7e7e7" />
                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/userLL"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                        </LinearLayout>
                    </LinearLayout>


                </HorizontalScrollView>

                <TextView
                    android:id="@+id/imgcheckTV"
                    android:layout_width="150dp"
                    android:layout_height="51dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="19dp"
                    android:layout_marginTop="30dp"
                    android:background="#0871bf"
                    android:gravity="center"
                    android:text="저장"
                    android:textColor="#ffffff"
                    android:textSize="20sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="100dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="60dp"
                android:background="@drawable/background_strock_e7e7e7"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="내 정보(매장 정보)"
                    android:textColor="#666666"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#e7e7e7" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:layout_height="match_parent"
                            android:background="#efefef"
                            android:gravity="center"
                            android:text="현재 비밀번호"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#e7e7e7" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1.7"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:paddingLeft="19dp">

                            <EditText
                                android:id="@+id/tempPasswordET"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@null"
                                android:gravity="center_vertical"
                                android:inputType="textPassword"
                                android:textSize="16sp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#e7e7e7" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#e7e7e7" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp">

                        <TextView

                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:layout_height="match_parent"
                            android:background="#efefef"
                            android:gravity="center"
                            android:text="새 비밀번호"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#e7e7e7" />

                        <LinearLayout

                            android:layout_width="0dp"
                            android:layout_weight="1.7"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:paddingLeft="19dp">

                            <EditText
                                android:id="@+id/newPasswordET"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@null"
                                android:gravity="center_vertical"
                                android:inputType="textPassword"
                                android:textSize="16sp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#e7e7e7" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#e7e7e7" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:layout_height="match_parent"
                            android:background="#efefef"
                            android:gravity="center"
                            android:text="새 비밀번호 확인"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#e7e7e7" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1.7"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:paddingLeft="19dp">

                            <EditText
                                android:id="@+id/newPassCheckET"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@null"
                                android:gravity="center_vertical"
                                android:inputType="textPassword"
                                android:textSize="16sp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#e7e7e7" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#e7e7e7" />
                </LinearLayout>

                <TextView
                    android:id="@+id/checkTV"
                    android:layout_width="150dp"
                    android:layout_height="51dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="19dp"
                    android:layout_marginTop="30dp"
                    android:background="#0871bf"
                    android:gravity="center"
                    android:text="변경"
                    android:textColor="#ffffff"
                    android:textSize="20sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>