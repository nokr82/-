<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:letterSpacing="-0.03"
                android:lineSpacingExtra="3sp"
                android:text="고객필터"
                android:textColor="#666666"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/background_strock_e7e7e7"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="9.5dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/background_strock_e7e7e7"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/allRL"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#0068df">


                        <TextView
                            android:id="@+id/allTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center_horizontal"
                            android:letterSpacing="-0.03"
                            android:lineSpacingExtra="3sp"
                            android:text="전체"
                            android:textColor="#ffff"
                            android:textSize="16dp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_alignParentBottom="true"
                            android:background="#606060" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/acc_countRL"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">


                        <TextView
                            android:id="@+id/acc_countTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center_horizontal"
                            android:letterSpacing="-0.03"
                            android:lineSpacingExtra="3sp"
                            android:text="적립횟수"
                            android:textColor="#c5c5c5"
                            android:textSize="16dp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_alignParentBottom="true"
                            android:background="#606060" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/novisitRL"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">


                        <TextView
                            android:id="@+id/novisitTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center_horizontal"
                            android:letterSpacing="-0.03"
                            android:lineSpacingExtra="3sp"
                            android:text="미방문"
                            android:textColor="#c5c5c5"
                            android:textSize="16dp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_alignParentBottom="true"
                            android:background="#606060" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/use_moneyRL"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">


                        <TextView
                            android:id="@+id/use_moneyTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center_horizontal"
                            android:letterSpacing="-0.03"
                            android:lineSpacingExtra="3sp"
                            android:text="구매금액"
                            android:textColor="#c5c5c5"
                            android:textSize="16dp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_alignParentBottom="true"
                            android:background="#606060" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/pointRL"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">


                        <TextView
                            android:id="@+id/pointTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center_horizontal"
                            android:letterSpacing="-0.03"
                            android:lineSpacingExtra="3sp"
                            android:text="포인트"
                            android:textColor="#c5c5c5"
                            android:textSize="16dp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_alignParentBottom="true"
                            android:background="#606060" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/visitLL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="20dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="18dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:letterSpacing="-0.03"
                        android:lineSpacingExtra="3sp"
                        android:text="방문기간"
                        android:textColor="#666666"
                        android:textSize="16dp" />

                    <LinearLayout
                        android:layout_width="70dp"
                        android:layout_height="18dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5.5dp"
                        android:layout_marginBottom="17dp"
                        android:background="@drawable/background_strock_707070"
                        android:gravity="center_vertical">

                        <Spinner
                            android:id="@+id/visitdaySP"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@null"></Spinner>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/icon_down_arrow" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/limitLL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp">


                    <EditText
                        android:id="@+id/limit_opET"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:inputType="number"
                        android:minEms="3"
                        android:singleLine="true"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/limit_opTV"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10.5dp"
                        android:gravity="center"
                        android:text="P"
                        android:textColor="#666666"
                        android:textSize="20dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10.5dp"
                        android:text="~"
                        android:textColor="#666666"
                        android:textSize="18dp" />

                    <EditText
                        android:id="@+id/limit_op2ET"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:inputType="number"
                        android:minEms="3"
                        android:singleLine="true"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/limit_op2TV"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10.5dp"
                        android:gravity="center_vertical"
                        android:text="P"
                        android:textColor="#666666"
                        android:textSize="20dp" />

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:text="상세필터"
                    android:textColor="#666666"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:letterSpacing="-0.03"
                    android:lineSpacingExtra="5sp"
                    android:text="상세 필터를 설정하지 않으면, 전체 고객이 선택됩니다 "
                    android:textColor="#a1a1a1"
                    android:textSize="12dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/background_strock_e7e7e7"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10.5dp"
                        android:text="성별"
                        android:textColor="#666666"
                        android:textSize="16dp" />

                    <LinearLayout
                        android:id="@+id/genderNLL"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="17.5dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/background_strock_c1c1c1"
                        android:gravity="center"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/genderTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:letterSpacing="-0.03"
                            android:lineSpacingExtra="4sp"
                            android:text="성별모름"
                            android:textColor="#9a9a99"
                            android:textSize="16dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/genderMLL"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/background_strock_c1c1c1"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/menTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:letterSpacing="-0.03"
                            android:lineSpacingExtra="4sp"
                            android:text="남성"
                            android:textColor="#9a9a99"
                            android:textSize="16dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/genderFLL"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/background_strock_c1c1c1"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/girlTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:letterSpacing="-0.03"
                            android:lineSpacingExtra="4sp"
                            android:text="여성"
                            android:textColor="#9a9a99"
                            android:textSize="16dp" />


                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10.5dp"
                        android:text="나이"
                        android:textColor="#666666"
                        android:textSize="16dp" />

                    <LinearLayout
                        android:id="@+id/tenLL"
                        android:layout_width="72dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="17.5dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/background_strock_c1c1c1"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tenTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:letterSpacing="-0.03"
                            android:lineSpacingExtra="4sp"
                            android:text="10대"
                            android:textColor="#9a9a99"
                            android:textSize="16dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/twoLL"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/background_strock_c1c1c1"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/twoTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:letterSpacing="-0.03"
                            android:lineSpacingExtra="4sp"
                            android:text="20대"
                            android:textColor="#9a9a99"
                            android:textSize="16dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/threeLL"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/background_strock_c1c1c1"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/threeTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:letterSpacing="-0.03"
                            android:lineSpacingExtra="4sp"
                            android:text="30대"
                            android:textColor="#9a9a99"
                            android:textSize="16dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/fourLL"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/background_strock_c1c1c1"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/fourTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:letterSpacing="-0.03"
                            android:lineSpacingExtra="4sp"
                            android:text="40대"
                            android:textColor="#9a9a99"
                            android:textSize="16dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/fiveLL"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/background_strock_c1c1c1"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/fiveTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:letterSpacing="-0.03"
                            android:lineSpacingExtra="4sp"
                            android:text="50대"
                            android:textColor="#9a9a99"
                            android:textSize="16dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/sixLL"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/background_strock_c1c1c1"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/sixTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:letterSpacing="-0.03"
                            android:lineSpacingExtra="4sp"
                            android:text="60대"
                            android:textColor="#9a9a99"
                            android:textSize="16dp" />


                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10.5dp"
                        android:text="유형"
                        android:textColor="#666666"
                        android:textSize="16dp" />

                    <LinearLayout
                        android:id="@+id/citizenLL"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="17.5dp"
                        android:background="@drawable/background_strock_c1c1c1"

                        android:gravity="center">

                        <TextView
                            android:id="@+id/citizenTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:letterSpacing="-0.03"
                            android:lineSpacingExtra="4sp"
                            android:text="동네주민"
                            android:textColor="#9a9a99"
                            android:textSize="16dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/studentLL"
                        android:layout_width="78dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/background_strock_c1c1c1"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/studentTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:letterSpacing="-0.03"
                            android:lineSpacingExtra="4sp"
                            android:text="대학생"
                            android:textColor="#9a9a99"
                            android:textSize="16dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/workerLL"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/background_strock_c1c1c1"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/workerTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:letterSpacing="-0.03"
                            android:lineSpacingExtra="4sp"
                            android:text="직장인"
                            android:textColor="#9a9a99"
                            android:textSize="16dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/cautionLL"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/background_strock_c1c1c1"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/cautionTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:letterSpacing="-0.03"
                            android:lineSpacingExtra="4sp"
                            android:text="각별주의"
                            android:textColor="#9a9a99"
                            android:textSize="16dp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="30dp"
                android:gravity="center_vertical|right"
                android:paddingRight="20dp">

                <TextView
                    android:id="@+id/countTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#0871bf"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text=" 고객 선택"
                    android:textColor="#666666"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/nextTV"
                    android:layout_width="131dp"
                    android:layout_height="match_parent"
                    android:background="#0871bf"
                    android:gravity="center"
                    android:text="다음"
                    android:textColor="#FFFFFF"
                    android:textSize="18dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>