<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="9sp"
                android:textColor="#666666"
                android:letterSpacing="-0.03"
                android:lineSpacingExtra="3sp"
                android:text="고객필터"
                />

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/background_strock_e7e7e7">

                <LinearLayout
                    android:layout_marginTop="9.5dp"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/background_strock_e7e7e7"
                    android:layout_height="20dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/allRL"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:background="#0068df">


                        <TextView
                            android:id="@+id/allTV"
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="9sp"
                            android:textColor="#ffff"
                            android:letterSpacing="-0.03"
                            android:lineSpacingExtra="3sp"
                            android:gravity="center_horizontal"
                            android:text="전체"
                            />
                        <View
                            android:layout_alignParentBottom="true"
                            android:background="#606060"
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/acc_countRL"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">


                        <TextView
                            android:id="@+id/acc_countTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center_horizontal"
                            android:letterSpacing="-0.03"
                            android:lineSpacingExtra="3sp"
                            android:text="적립횟수"
                            android:textColor="#c5c5c5"
                            android:textSize="9sp" />
                        <View
                            android:layout_alignParentBottom="true"
                            android:background="#606060"
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/novisitRL"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">


                        <TextView
                            android:id="@+id/novisitTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center_horizontal"
                            android:letterSpacing="-0.03"
                            android:lineSpacingExtra="3sp"
                            android:text="미방문"
                            android:textColor="#c5c5c5"
                            android:textSize="9sp" />
                        <View
                            android:layout_alignParentBottom="true"
                            android:background="#606060"
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/use_moneyRL"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">


                        <TextView
                            android:id="@+id/use_moneyTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center_horizontal"
                            android:letterSpacing="-0.03"
                            android:lineSpacingExtra="3sp"
                            android:text="구매금액"
                            android:textColor="#c5c5c5"
                            android:textSize="9sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_alignParentBottom="true"
                            android:background="#606060" />

                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/pointRL"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">


                        <TextView
                            android:id="@+id/pointTV"
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="9sp"
                            android:textColor="#c5c5c5"
                            android:letterSpacing="-0.03"
                            android:lineSpacingExtra="3sp"
                            android:gravity="center_horizontal"
                            android:text="포인트"
                            />
                        <View
                            android:layout_alignParentBottom="true"
                            android:background="#606060"
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"/>

                    </RelativeLayout>

                </LinearLayout>
<LinearLayout
    android:id="@+id/visitLL"
    android:visibility="gone"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="70dp"
                    android:layout_height="18dp"
                    android:textSize="9sp"
                    android:textColor="#666666"
                    android:letterSpacing="-0.03"
                    android:lineSpacingExtra="3sp"
                    android:text="방문기간"
                    />
                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5.5dp"
                    android:layout_width="70dp"
                    android:layout_height="18dp"
                    android:layout_marginBottom="8.5dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/background_strock_707070">
                    <Spinner
                        android:id="@+id/visitdaySP"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:layout_height="match_parent"></Spinner>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_down_arrow"/>

                </LinearLayout>

</LinearLayout>
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"

                    android:id="@+id/limitLL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <EditText
                        android:inputType="number"
                        android:minEms="3"
                        android:singleLine="true"
                        android:id="@+id/limit_opET"
                        android:textSize="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:background="@null" />
                    <TextView
                        android:id="@+id/limit_opTV"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_marginLeft="10.5dp"
                        android:textSize="10dp"
                        android:textColor="#666666"
                        android:text="P"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10.5dp"
                        android:textSize="18dp"
                        android:textColor="#666666"
                        android:text="~"/>

                    <EditText
                        android:layout_marginLeft="10dp"
                        android:minEms="3"
                        android:inputType="number"
                        android:singleLine="true"
                        android:textSize="10dp"
                        android:id="@+id/limit_op2ET"
                        android:layout_width="wrap_content"
                        android:background="@null"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        />
                    <TextView
                        android:id="@+id/limit_op2TV"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10.5dp"
                        android:gravity="center_vertical"
                        android:textSize="10dp"
                        android:textColor="#666666"
                        android:text="P"/>

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="9sp"
                    android:textColor="#666666"
                    android:text="상세필터"
                    android:layout_marginRight="4dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="7sp"
                    android:textColor="#a1a1a1"
                    android:letterSpacing="-0.03"
                    android:lineSpacingExtra="5sp"
                    android:text="상세 필터를 설정하지 않으면, 전체 고객이 선택됩니다 "
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:background="@drawable/background_strock_e7e7e7">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center_vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10.5dp"
                        android:textSize="9sp"
                        android:textColor="#666666"
                        android:text="성별"/>

                    <LinearLayout
                        android:id="@+id/genderNLL"
                        android:layout_width="50dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="17.5dp"
                        android:background="@drawable/background_strock_c1c1c1"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/genderTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="8sp"
                            android:textColor="#9a9a99"
                            android:letterSpacing="-0.03"
                            android:lineSpacingExtra="4sp"
                            android:gravity="center_horizontal"
                            android:text="성별모름"
                            />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/genderMLL"
                        android:layout_width="39dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/background_strock_c1c1c1"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/menTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:letterSpacing="-0.03"
                            android:lineSpacingExtra="4sp"
                            android:text="남성"
                            android:textColor="#9a9a99"
                            android:textSize="8sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/genderFLL"
                        android:layout_width="40dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/background_strock_c1c1c1"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/girlTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:letterSpacing="-0.03"
                            android:lineSpacingExtra="4sp"
                            android:text="여성"
                            android:textColor="#9a9a99"
                            android:textSize="8sp" />


                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center_vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10.5dp"
                        android:textSize="9sp"
                        android:textColor="#666666"
                        android:text="나이"/>

                    <LinearLayout
                        android:id="@+id/tenLL"
                        android:layout_width="36dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="17.5dp"
                        android:background="@drawable/background_strock_c1c1c1"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tenTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:letterSpacing="-0.03"
                            android:lineSpacingExtra="4sp"
                            android:text="10대"
                            android:textColor="#9a9a99"
                            android:textSize="8sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/twoLL"
                        android:layout_width="40dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/background_strock_c1c1c1"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/twoTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="8sp"
                            android:textColor="#9a9a99"
                            android:letterSpacing="-0.03"
                            android:lineSpacingExtra="4sp"
                            android:gravity="center_horizontal"
                            android:text="20대"
                            />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/threeLL"
                        android:layout_width="40dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/background_strock_c1c1c1"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/threeTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:letterSpacing="-0.03"
                            android:lineSpacingExtra="4sp"
                            android:text="30대"
                            android:textColor="#9a9a99"
                            android:textSize="8sp" />


                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/fourLL"
                        android:layout_width="40dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/background_strock_c1c1c1"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/fourTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:letterSpacing="-0.03"
                            android:lineSpacingExtra="4sp"
                            android:text="40대"
                            android:textColor="#9a9a99"
                            android:textSize="8sp" />


                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/fiveLL"
                        android:layout_width="40dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/background_strock_c1c1c1"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/fiveTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="8sp"
                            android:textColor="#9a9a99"
                            android:letterSpacing="-0.03"
                            android:lineSpacingExtra="4sp"
                            android:gravity="center_horizontal"
                            android:text="50대"
                            />


                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/sixLL"
                        android:layout_width="40dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/background_strock_c1c1c1"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/sixTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="8sp"
                            android:textColor="#9a9a99"
                            android:letterSpacing="-0.03"
                            android:lineSpacingExtra="4sp"
                            android:gravity="center_horizontal"
                            android:text="60대"
                            />


                    </LinearLayout>

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10.5dp"
                        android:textSize="9sp"
                        android:textColor="#666666"
                        android:text="유형"/>
                    <LinearLayout
                        android:id="@+id/citizenLL"
                        android:layout_width="50dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="17.5dp"
                        android:background="@drawable/background_strock_c1c1c1"

                        android:gravity="center">

                        <TextView
                            android:id="@+id/citizenTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:letterSpacing="-0.03"
                            android:lineSpacingExtra="4sp"
                            android:text="동네주민"
                            android:textColor="#9a9a99"
                            android:textSize="8sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/studentLL"
                        android:layout_width="39dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/background_strock_c1c1c1"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/studentTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:letterSpacing="-0.03"
                            android:lineSpacingExtra="4sp"
                            android:text="대학생"
                            android:textColor="#9a9a99"
                            android:textSize="8sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/workerLL"
                        android:layout_width="40dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/background_strock_c1c1c1"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/workerTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="8sp"
                            android:textColor="#9a9a99"
                            android:letterSpacing="-0.03"
                            android:lineSpacingExtra="4sp"
                            android:gravity="center_horizontal"
                            android:text="직장인"
                            />


                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/cautionLL"
                        android:layout_width="50dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/background_strock_c1c1c1"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/cautionTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="8sp"
                            android:textColor="#9a9a99"
                            android:letterSpacing="-0.03"
                            android:lineSpacingExtra="4sp"
                            android:gravity="center_horizontal"
                            android:text="각별주의" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="8dp"
                android:paddingRight="10dp"
                android:gravity="center_vertical|right">

                <TextView
                    android:id="@+id/countTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11,000"
                    android:textColor="#0871bf"
                    android:textSize="8.5dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text=" 고객 선택"
                    android:textColor="#666666"
                    android:textSize="8.5dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/nextTV"
                    android:layout_width="65.5dp"
                    android:layout_height="match_parent"
                    android:background="#0871bf"
                    android:gravity="center"
                    android:text="다음"
                    android:textColor="#FFFFFF"
                    android:textSize="9dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>