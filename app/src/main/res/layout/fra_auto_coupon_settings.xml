<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.4"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <LinearLayout
                android:id="@+id/newMemberLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="#eeeeee">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="99dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="120dp"
                        android:scaleType="fitXY"
                        android:layout_height="60dp"
                        android:src="@mipmap/coupon"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#333333"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:letterSpacing="-0.2"
                            android:text="첫 가입 고객 환영 쿠폰"/>

                        <ImageView
                            android:id="@+id/newMemberIV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:src="@mipmap/off"/>

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#e7e7e7"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/birthMemberLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="99dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="120dp"
                        android:scaleType="fitXY"
                        android:layout_height="60dp"
                        android:src="@mipmap/coupon" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:letterSpacing="-0.2"
                            android:text="생일 고객 축하 쿠폰"
                            android:textColor="#333333"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/birthMemberIV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:src="@mipmap/off" />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#e7e7e7"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/noVisit30LL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="99dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="120dp"
                        android:scaleType="fitXY"
                        android:layout_height="60dp"
                        android:src="@mipmap/coupon"
                     />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#333333"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:letterSpacing="-0.2"
                            android:text="30일 미방문 고객 쿠폰"/>

                        <ImageView
                            android:id="@+id/noVisit30IV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:src="@mipmap/off"/>

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#e7e7e7"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/noVisit60LL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="99dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="120dp"
                        android:scaleType="fitXY"
                        android:layout_height="60dp"
                        android:src="@mipmap/coupon"
                      />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#333333"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:letterSpacing="-0.2"
                            android:text="60일 미방문 고객 쿠폰"/>

                        <ImageView
                            android:id="@+id/noVisit60IV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:src="@mipmap/off"/>

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#e7e7e7"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/noVisit90LL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="99dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="120dp"
                        android:scaleType="fitXY"
                        android:layout_height="60dp"
                        android:src="@mipmap/coupon"
                       />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#333333"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:letterSpacing="-0.2"
                            android:text="90일 미방문 고객 쿠폰"/>

                        <ImageView
                            android:id="@+id/noVisit90IV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:src="@mipmap/off"/>

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#e7e7e7"/>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#f0f0f0"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.6"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/couponNameTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textColor="#666666"
                    android:textStyle="bold"
                    android:text="첫 가입 고객 환영 쿠폰"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginTop="15dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/days30LL"
                        android:layout_width="35dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/days30IV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/box_check_off"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:textSize="16dp"
                            android:textColor="#666666"
                            android:text="30일"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="35dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="6dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/box_check_off"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:textSize="16dp"
                            android:textColor="#666666"
                            android:text="60일"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="35dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="6dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/box_check_off"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:textSize="16dp"
                            android:textColor="#666666"
                            android:text="90일"/>

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="쿠폰 내용"
                    android:textSize="16dp"
                    android:textColor="#666666"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/contentET"
                    android:layout_width="150dp"
                    android:layout_height="36dp"
                    android:textSize="16dp"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:background="@drawable/background_strock_e7e7e7" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="쿠폰 유효기간"
                    android:textSize="16dp"
                    android:textColor="#666666"
                    android:textStyle="bold"/>

                <RelativeLayout
                    android:layout_width="119.5dp"
                    android:layout_height="36dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/background_strock_e7e7e7">

                    <Spinner
                        android:id="@+id/couponDateSP"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="10dp"
                        android:background="@null"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_down_arrow"
                        android:layout_marginRight="5dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"/>

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="사용 가능 요일"
                    android:textSize="16dp"
                    android:textColor="#666666"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginTop="10dp">

                    <LinearLayout
                        android:id="@+id/weekDayLL"
                        android:layout_width="35dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/weekDayIV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/box_check_off"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:textSize="16dp"
                            android:textColor="#666666"
                            android:text="평일"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/satDayLL"
                        android:layout_width="35dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="6dp">

                        <ImageView
                            android:id="@+id/satDayIV"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:src="@mipmap/box_check_off" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:textSize="16dp"
                            android:textColor="#666666"
                            android:text="토"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/sunDayLL"
                        android:layout_width="35dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="6dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/sunDayIV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/box_check_off"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:textSize="16dp"
                            android:textColor="#666666"
                            android:text="일"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="11dp"
                        android:text="유효기간 만료 알림"
                        android:textSize="16dp"
                        android:textColor="#666666"
                        android:textStyle="bold"/>

                    <LinearLayout
                        android:id="@+id/validityLL"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/validityIV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/switch_off" />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/saveTV"
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:background="#0871bf"
                    android:gravity="center"
                    android:layout_gravity="right"
                    android:layout_marginRight="10dp"
                    android:textSize="9sp"
                    android:textColor="#ffffff"
                    android:text="저장"
                    android:letterSpacing="-0.03"
                    android:layout_marginTop="10dp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>