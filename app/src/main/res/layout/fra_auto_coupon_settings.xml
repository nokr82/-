<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2.4"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

                <LinearLayout
                    android:id="@+id/newMemberLL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#eeeeee"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="99dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="60dp"
                            android:scaleType="fitXY"
                            android:src="@mipmap/coupon" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="첫 가입 고객 환영 쿠폰"
                                android:textColor="#333333"
                                android:textSize="16dp"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/newMemberIV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:src="@mipmap/off" />

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#e7e7e7" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/birthMemberLL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="99dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="60dp"
                            android:scaleType="fitXY"
                            android:src="@mipmap/coupon" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="생일 고객 축하 쿠폰"
                                android:textColor="#333333"
                                android:textSize="16dp"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/birthMemberIV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:src="@mipmap/off" />

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#e7e7e7" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/noVisit30LL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="99dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="60dp"
                            android:scaleType="fitXY"
                            android:src="@mipmap/coupon" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="30일 미방문 고객 쿠폰"
                                android:textColor="#333333"
                                android:textSize="16dp"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/noVisit30IV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:src="@mipmap/off" />

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#e7e7e7" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/noVisit60LL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="99dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="60dp"
                            android:scaleType="fitXY"
                            android:src="@mipmap/coupon" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="60일 미방문 고객 쿠폰"
                                android:textColor="#333333"
                                android:textSize="16dp"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/noVisit60IV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:src="@mipmap/off" />

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#e7e7e7" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/noVisit90LL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="99dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="60dp"
                            android:scaleType="fitXY"
                            android:src="@mipmap/coupon" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="90일 미방문 고객 쿠폰"
                                android:textColor="#333333"
                                android:textSize="16dp"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/noVisit90IV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:src="@mipmap/off" />

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#e7e7e7" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#f0f0f0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.6"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/couponNameTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="첫 가입 고객 환영 쿠폰"
                        android:textColor="#666666"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginTop="15dp"
                        android:visibility="gone">

                        <LinearLayout
                            android:id="@+id/days30LL"
                            android:layout_width="35dp"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical">

                            <ImageView
                                android:id="@+id/days30IV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/box_check_off" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:text="30일"
                                android:textColor="#666666"
                                android:textSize="16dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="35dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="6dp"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/box_check_off" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:text="60일"
                                android:textColor="#666666"
                                android:textSize="16dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="35dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="6dp"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/box_check_off" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:text="90일"
                                android:textColor="#666666"
                                android:textSize="16dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="쿠폰 내용"
                        android:textColor="#666666"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/contentET"
                        android:layout_width="150dp"
                        android:layout_height="36dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/background_strock_e7e7e7"
                        android:paddingLeft="5dp"
                        android:singleLine="true"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="쿠폰 유효기간"
                        android:textColor="#666666"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:layout_width="119.5dp"
                        android:layout_height="36dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/background_strock_e7e7e7">

                        <Spinner
                            android:id="@+id/couponDateSP"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:paddingLeft="10dp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="5dp"
                            android:src="@mipmap/icon_down_arrow" />

                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="사용 가능 요일"
                        android:textColor="#666666"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginTop="10dp">

                        <LinearLayout
                            android:id="@+id/weekDayLL"
                            android:layout_width="55dp"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical">

                            <ImageView
                                android:id="@+id/weekDayIV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/box_check_off" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:text="평일"
                                android:textColor="#666666"
                                android:textSize="16dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/satDayLL"
                            android:layout_width="35dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="6dp"
                            android:gravity="center_vertical">

                            <ImageView
                                android:id="@+id/satDayIV"
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:src="@mipmap/box_check_off" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:text="토"
                                android:textColor="#666666"
                                android:textSize="16dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/sunDayLL"
                            android:layout_width="35dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="6dp"
                            android:gravity="center_vertical">

                            <ImageView
                                android:id="@+id/sunDayIV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/box_check_off" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:text="일"
                                android:textColor="#666666"
                                android:textSize="16dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="11dp"
                            android:text="유효기간 만료 알림"
                            android:textColor="#666666"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:id="@+id/validityLL"
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical">

                            <ImageView
                                android:id="@+id/validityIV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/off" />

                        </LinearLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:id="@+id/imgLL"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/box_dash_dcdcdc"
                            android:orientation="vertical"
                            android:padding="18dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="9dp"
                                android:gravity="center">


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="이미지 첨부하기"
                                    android:textColor="#5e5e5e"
                                    android:textSize="15sp" />
                            </LinearLayout>
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/imgIV"
                                android:scaleType="fitXY"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                            <ImageView
                                android:id="@+id/delIV"
                                android:visibility="gone"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@mipmap/btn_del_red"
                                android:layout_centerInParent="true"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentRight="true" />
                        </RelativeLayout>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:layout_weight="1"
                            android:background="@drawable/background_box_e5ebf7"
                            android:minHeight="250dp"
                            android:orientation="vertical"
                            android:paddingLeft="13dp"
                            android:paddingRight="13dp"
                            android:paddingTop="26dp">
                            <EditText
                                android:id="@+id/titleET"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingBottom="18dp"
                                android:hint="제목을 입력해주세요"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:textColor="#555555"
                                android:background="@null"
                                android:singleLine="true"/>
                            <TextView
                                android:id="@+id/titleTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="메시지 내용"
                                android:textColor="#4e4e4e"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/messageET"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="#555555"
                                android:textSize="15sp" />

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>



            </LinearLayout>

        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:padding="20dp">



                </View>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1.6"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:padding="20dp">

                <me.grantland.widget.AutofitTextView
                    android:maxLines="1"
                    android:singleLine="true"
                    android:id="@+id/companyNameTV"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="36dp"
                    android:layout_marginRight="28dp"
                    android:background="@drawable/background_box_f4f4f4"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="#555555"
                    android:text="매장 이름"/>

                <me.grantland.widget.AutofitTextView
                    android:maxLines="1"
                    android:singleLine="true"
                    android:id="@+id/memberNameTV"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="36dp"
                    android:layout_marginRight="28dp"
                    android:background="@drawable/background_box_f4f4f4"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="#555555"
                    android:text="고객 이름"/>

                <me.grantland.widget.AutofitTextView
                    android:maxLines="1"
                    android:singleLine="true"
                    android:id="@+id/pointTV"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="36dp"
                    android:background="@drawable/background_box_f4f4f4"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="#555555"
                    android:text="보유 포인트"/>
                <me.grantland.widget.AutofitTextView
                    android:maxLines="1"
                    android:singleLine="true"
                    android:id="@+id/companyTelTV"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="36dp"
                    android:layout_marginLeft="28dp"
                    android:background="@drawable/background_box_f4f4f4"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="#555555"
                    android:text="매장번호"/>

            </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/saveTV"
                android:layout_width="150dp"
                android:layout_height="51dp"
                android:layout_gravity="right"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="#0871bf"
                android:gravity="center"
                android:text="저장"
                android:textColor="#ffffff"
                android:textSize="20dp" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>