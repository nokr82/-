<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="34.5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4.5dp"
                        android:layout_marginTop="9.5dp"
                        android:src="@mipmap/btn_on"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="13dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#333333"
                            android:textSize="8sp"
                            android:textStyle="bold"
                            android:letterSpacing="-0.2"
                            android:text="첫 가입 고객 쿠폰"/>

                        <TextView
                            android:id="@+id/couponNameTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3.5dp"
                            android:text=""
                            android:textSize="7sp"
                            android:textColor="#666666"
                            android:letterSpacing="-0.02"/>

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#e7e7e7"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="34.5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4.5dp"
                        android:layout_marginTop="9.5dp"
                        android:src="@mipmap/btn_on"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="13dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#333333"
                            android:textSize="8sp"
                            android:textStyle="bold"
                            android:letterSpacing="-0.2"
                            android:text="생일 고객 쿠폰"/>

                        <TextView
                            android:id="@+id/itemEventContTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3.5dp"
                            android:text="아메리카토 1잔"
                            android:textSize="7sp"
                            android:textColor="#666666"
                            android:letterSpacing="-0.02"/>

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#e7e7e7"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="34.5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4.5dp"
                        android:layout_marginTop="9.5dp"
                        android:src="@mipmap/btn_on"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="13dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#333333"
                            android:textSize="8sp"
                            android:textStyle="bold"
                            android:letterSpacing="-0.2"
                            android:text="30일 미방문 고객 쿠폰"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3.5dp"
                            android:text="아메리카토 1잔"
                            android:textSize="7sp"
                            android:textColor="#666666"
                            android:letterSpacing="-0.02"/>

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#e7e7e7"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="34.5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4.5dp"
                        android:layout_marginTop="9.5dp"
                        android:src="@mipmap/btn_on"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="13dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#333333"
                            android:textSize="8sp"
                            android:textStyle="bold"
                            android:letterSpacing="-0.2"
                            android:text="60일 미방문 고객 쿠폰"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3.5dp"
                            android:text="아메리카토 1잔"
                            android:textSize="7sp"
                            android:textColor="#666666"
                            android:letterSpacing="-0.02"/>

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#e7e7e7"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="34.5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4.5dp"
                        android:layout_marginTop="9.5dp"
                        android:src="@mipmap/btn_on"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="13dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#333333"
                            android:textSize="8sp"
                            android:textStyle="bold"
                            android:letterSpacing="-0.2"
                            android:text="90일 미방문 고객 쿠폰"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3.5dp"
                            android:text="아메리카토 1잔"
                            android:textSize="7sp"
                            android:textColor="#666666"
                            android:letterSpacing="-0.02"/>

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#e7e7e7"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="9dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="8sp"
                        android:textColor="#666666"
                        android:textStyle="bold"
                        android:letterSpacing="-0.2"
                        android:text="쿠폰종류"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20.5dp"
                        android:text="쿠폰 유효기간"
                        android:textColor="#666666"
                        android:textStyle="bold"
                        android:letterSpacing="-0.2"
                        android:textSize="8sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20.5dp"
                        android:textSize="8sp"
                        android:textStyle="bold"
                        android:textColor="#666666"
                        android:letterSpacing="-0.2"
                        android:text="사용 가능 요일"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="17.5dp"
                        android:textStyle="bold"
                        android:textSize="8sp"
                        android:textColor="#666666"
                        android:text="유효기간 만료 알림"/>
                </LinearLayout>

                <EditText
                    android:id="@+id/coupon_prdET"
                    android:layout_width="119.5dp"
                    android:layout_height="18dp"
                    android:textSize="8dp"
                    android:hint="상품명"
                    android:textColor="#666666"
                    android:background="@drawable/background_strock_e7e7e7"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="119.5dp"
                        android:layout_height="18dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:background="@drawable/background_strock_e7e7e7">
                        <Spinner
                            android:paddingLeft="10dp"
                            android:id="@+id/coupon_exSP"
                            android:layout_width="104dp"
                            android:layout_height="18dp"
                            android:background="@null"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/icon_down_arrow"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp">
                        <LinearLayout
                            android:id="@+id/weekdayLL"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/weekdayIV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/box_check_on"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:textSize="8sp"
                                android:textColor="#666666"
                                android:text="평일"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/saturdayLL"
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="11dp"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/saturdayIV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/box_check_off"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:textSize="8sp"
                                android:textColor="#666666"
                                android:text="토"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/sundayLL"
                            android:layout_marginLeft="11dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/sundayIV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/box_check_off"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:textSize="8sp"
                                android:textColor="#666666"
                                android:text="일"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="17dp"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/validityIV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/switch_on"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:textSize="7sp"
                            android:textColor="#666666"
                            android:text="* 코인 추가사용"/>
                        <TextView
                            android:id="@+id/helpTV"
                            android:layout_width="90dp"
                            android:layout_height="15dp"
                            android:layout_marginTop="2.5dp"
                            android:gravity="center"
                            android:background="#dcdfe0"
                            android:textColor="#666666"
                            android:textSize="7sp"
                            android:text="유효기간 만료 알림이란?"
                            android:letterSpacing="-0.18"/>

                        <TextView
                            android:id="@+id/nextTV"
                            android:layout_width="65dp"
                            android:layout_height="20dp"
                            android:background="#0871bf"
                            android:layout_gravity="right"
                            android:gravity="center"
                            android:textSize="9sp"
                            android:textColor="#ffffff"
                            android:text="다음"
                            android:letterSpacing="-0.03"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>