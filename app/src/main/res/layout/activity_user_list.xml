<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="9.5dp"
        android:orientation="vertical">
        
        <LinearLayout
            android:layout_marginLeft="155dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/userLL"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:background="@drawable/background_strock_707070"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="25sp"
                    android:text="고객목록"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/pointLL"
                android:layout_marginLeft="5dp"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:gravity="center"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textColor="#ffffff"
                    android:lineSpacingExtra="25sp"
                    android:text="포인트 내역"
                    android:layout_margin="2dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/uservisitLL"
                android:layout_marginLeft="5dp"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:gravity="center"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textColor="#ffffff"
                    android:lineSpacingExtra="25sp"
                    android:text="고객 방문 분석"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/analysisRevenueLL"
                android:layout_marginLeft="5dp"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:gravity="center"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textColor="#ffffff"
                    android:lineSpacingExtra="25sp"
                    android:text="매출분석"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/messageLL"
                android:layout_marginLeft="5dp"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:gravity="center"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textColor="#ffffff"
                    android:lineSpacingExtra="25sp"
                    android:text="메세지/쿠폰관리"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/settingLL"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_marginLeft="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textColor="#ffffff"
                    android:lineSpacingExtra="25sp"
                    android:text="설정"
                    />
            </LinearLayout>


        </LinearLayout>


        <FrameLayout
            android:id="@+id/userFL"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>





    </LinearLayout>
    
    
    




    
    
</LinearLayout>