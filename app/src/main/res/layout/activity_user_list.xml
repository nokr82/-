<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mlinear"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="9.5dp"
        android:layout_marginRight="9.5dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/userLL"
                    android:layout_width="140dp"
                    android:layout_height="40dp"
                    android:background="@drawable/background_strock_707070"
                    android:gravity="center">

                    <me.grantland.widget.AutofitTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="25sp"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="고객 목록"
                        android:textColor="#ffffff"
                        android:textSize="20dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/pointLL"
                    android:layout_width="140dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:gravity="center">

                    <me.grantland.widget.AutofitTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:lineSpacingExtra="25sp"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="포인트 내역"
                        android:textColor="#ffffff"
                        android:textSize="20dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/uservisitLL"
                    android:layout_width="140dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:gravity="center">

                    <me.grantland.widget.AutofitTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="25sp"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="고객 분석"
                        android:textColor="#ffffff"
                        android:textSize="20dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/analysisRevenueLL"
                    android:layout_width="140dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:gravity="center">

                    <me.grantland.widget.AutofitTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="25sp"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="매출 분석"
                        android:textColor="#ffffff"
                        android:textSize="20dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/messageLL"
                    android:layout_width="170dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:gravity="center">

                    <me.grantland.widget.AutofitTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="25sp"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="메세지/쿠폰"
                        android:textColor="#ffffff"
                        android:textSize="20dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/settingLL"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:gravity="center">

                    <me.grantland.widget.AutofitTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="25sp"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="설정"
                        android:textColor="#ffffff"
                        android:textSize="20dp" />
                </LinearLayout>


            </LinearLayout>

        </HorizontalScrollView>


        <FrameLayout
            android:id="@+id/userFL"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1">

        </FrameLayout>


    </LinearLayout>


</LinearLayout>