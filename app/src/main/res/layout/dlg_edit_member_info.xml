<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:background="#ffff"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/createdTV"
                        android:layout_marginLeft="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:textColor="#8d8d8d"
                        android:letterSpacing="-0.05"
                        android:lineSpacingExtra="2sp"
                        android:text="2018.10.15 17:20:00"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_marginTop="17dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/phoneET"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="32dp"
                            android:textColor="#005492"
                            android:letterSpacing="-0.03"
                            android:lineSpacingExtra="-12dp"
                            android:gravity="center_horizontal"
                            android:text="01012345678"
                            android:background="@null"/>

                        <ImageView
                            android:visibility="gone"
                            android:layout_marginLeft="8.5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/arrow"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.3dp"
                        android:background="#e7e6e6"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"/>

                    <LinearLayout
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="#489cca"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="35dp">

                            <LinearLayout
                                android:layout_width="35dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:background="#f7f7f7">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12dp"
                                    android:textColor="#666666"
                                    android:letterSpacing="-0.01"
                                    android:gravity="center_horizontal"
                                    android:text="이름"
                                    />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:layout_height="match_parent">

                                <EditText
                                    android:id="@+id/nameET"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="5.5dp"
                                    android:background="@null"
                                    android:letterSpacing="-0.01"
                                    android:text="박소윤"
                                    android:textColor="#303030"
                                    android:textSize="12dp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="35dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:background="#f7f7f7">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12dp"
                                    android:textColor="#666666"
                                    android:letterSpacing="-0.01"
                                    android:gravity="center_horizontal"
                                    android:text="성별"
                                    />

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:id="@+id/maleLL"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical">

                                    <ImageView
                                        android:id="@+id/maleIV"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="3dp"
                                        android:src="@drawable/radio_on" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="1dp"
                                        android:textSize="12dp"
                                        android:textColor="#303030"
                                        android:letterSpacing="-0.01"
                                        android:gravity="center_horizontal"
                                        android:text="남" />

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/famaleLL"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical">

                                    <ImageView
                                        android:id="@+id/femaleIV"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="3dp"
                                        android:src="@drawable/radio_on" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="1dp"
                                        android:textSize="12dp"
                                        android:textColor="#303030"
                                        android:letterSpacing="-0.01"
                                        android:gravity="center_horizontal"
                                        android:text="여" />

                                </LinearLayout>

                            </LinearLayout>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="35dp">

                            <LinearLayout
                                android:layout_width="35dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:background="#f7f7f7">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12dp"
                                    android:textColor="#666666"
                                    android:letterSpacing="-0.01"
                                    android:gravity="center_horizontal"
                                    android:text="나이"
                                    />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:layout_height="match_parent">

                                <EditText
                                    android:id="@+id/ageET"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="5.5dp"
                                    android:letterSpacing="-0.01"
                                    android:textColor="#303030"
                                    android:textSize="12dp"
                                    android:inputType="number"
                                    android:text="22"
                                    android:background="@null"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="35dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:background="#f7f7f7">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12dp"
                                    android:textColor="#666666"
                                    android:letterSpacing="-0.01"
                                    android:gravity="center_horizontal"
                                    android:text="생일"
                                    />

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:layout_height="match_parent">
                                <EditText
                                    android:id="@+id/birthET"
                                    android:layout_marginLeft="5.5dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:textSize="12dp"
                                    android:textColor="#303030"
                                    android:letterSpacing="-0.01"
                                    android:text="19951103"
                                    android:background="@null"
                                    android:inputType="number"
                                    />

                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="27.5dp">

                            <LinearLayout
                                android:layout_width="35dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:background="#f7f7f7">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12dp"
                                    android:textColor="#666666"
                                    android:letterSpacing="-0.01"
                                    android:gravity="center_horizontal"
                                    android:text="메모"
                                    />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:layout_height="match_parent">

                                <EditText
                                    android:id="@+id/memoET"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="5.5dp"
                                    android:textSize="12dp"
                                    android:textColor="#303030"
                                    android:letterSpacing="-0.01"
                                    android:text="소형견, 말티스, 강아지 이름우측 최상단 톱니바퀴 모양을 누르면설정으로 이동합니다."
                                    android:background="@null"/>

                            </LinearLayout>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="#489cca"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/saveLL"
                        android:layout_marginTop="12.5dp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:background="#00d1ce">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20dp"
                            android:textColor="#ffffff"
                            android:letterSpacing="-0.01"
                            android:lineSpacingExtra="0sp"
                            android:text="저장" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</LinearLayout>