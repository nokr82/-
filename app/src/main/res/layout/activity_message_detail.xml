<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#479edf"
        android:gravity="right">

        <LinearLayout
            android:id="@+id/finishLL"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/btn_close" />

        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/background_strock_e7e7e7"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="50dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:textSize="18dp"
                        android:textColor="#a1a1a1"
                        android:letterSpacing="-0.03"
                        android:lineSpacingExtra="3sp"
                        android:text="고객 :"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/customerTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:textColor="#666666"
                        android:letterSpacing="-0.03"
                        android:lineSpacingExtra="3sp"
                        android:text=""
                        android:textStyle="bold"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="50dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:textSize="18dp"
                        android:textColor="#a1a1a1"
                        android:letterSpacing="-0.03"
                        android:lineSpacingExtra="3sp"
                        android:text="쿠폰 :"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/couponTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:textColor="#666666"
                        android:letterSpacing="-0.03"
                        android:lineSpacingExtra="3sp"
                        android:text=""
                        android:textStyle="bold"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="50dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:textSize="18dp"
                        android:textColor="#a1a1a1"
                        android:letterSpacing="-0.03"
                        android:lineSpacingExtra="3sp"
                        android:text="날짜 :"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/createdTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:textColor="#666666"
                        android:letterSpacing="-0.03"
                        android:lineSpacingExtra="3sp"
                        android:text=""
                        android:textStyle="bold"/>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="5dp"
                android:background="#e7e7e7"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#f4f4f4"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#e7e7e7"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="리포트"
                android:textColor="#666666"
                android:textSize="22dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp"
                android:padding="10dp"
                android:background="@drawable/background_strock_e7e7e7"
                android:orientation="horizontal">

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/ageBarChart"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="200dp"
                    android:layout_marginRight="5dp">

                </com.github.mikephil.charting.charts.BarChart>

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/genderPieChart"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_weight="0.5">

                </com.github.mikephil.charting.charts.PieChart>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>